<div class="container">
  <div class="d-flex justify-content-around  border-dark">
    <div class="align-self-center w-50">
        <div class="text-left" >
            <h3><%= @airplane.tailnumber %></h3>
             <h4><%= "#{@airplane.engines} #{@airplane.make} based at #{@airplane.home_airport}"%></h4>
             <h5><%= @airplane.ownership %></h5>
             <h5> <u>Qualifications to Rent</u></h5>

              <li class= "mt-2", style="display: block;"><b>Total Hours:</b> <%= @airplane.minimum_hours %> </li>
              <li class= "mt-2", style="display: block;"><b>PIC Hours in Same Type:</b> <%=(@airplane.minimum_hours)/3%></li>
              <li class= "mt-2", style="display: block;"><b>Minimum License:</b> <%= @airplane.required_licenses %></li>

             <h6 class= "mt-2">Wet Rate per Hour: $<%= @airplane.price_per_hour %></h6>
             <p class="text-muted mt-3"><%= @airplane.description%></p>
            <div class="d-flex justify-content-space-around">
              <%= link_to "Destroy this plane", @airplane, method: :delete, class: "button-airplanes m-4" if current_user == @airplane.user %>
              <%= link_to "Edit this airplane", edit_airplane_path(@airplane), class: "button-airplanes m-4" if current_user == @airplane.user %>
            </div>

        </div>
    </div>
    <div id="carouselExampleIndicators"  class="carousel slide w-50" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @airplane.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>" >
              <%= cl_image_tag photo.key, class: "d-block w-100", style: "object-fit: cover; height: 500px;" %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
      </div>
    </div>


    <div>
      <% if current_user %>
        <% if current_user.inquiries.where(airplane: @airplane).count == 0 && @airplane.user != current_user %>
          <%= simple_form_for [@airplane, @inquiry] do |f| %>
          <%= f.hidden_field :user, :value => current_user %>
          <%= f.button :submit, value: "Inquire about this plane", class: "button-airplanes mt-4 mb-4 w-50" %>
        <% end %>
      <% end %>
      <% @existing_inquiry = Inquiry.where(user: current_user).joins(:airplane).where(airplane: @airplane).last %>
      <%= link_to "Go to inquiry about plane", inquiry_path(@existing_inquiry), class: "button-airplanes mt-4 mb-4 w-50" if current_user.inquiries.where(airplane: @airplane).count >= 1 %>
      <% end %>

      <div class="d-flex flex-row justify-content-between">
        <%= link_to "Back to all available planes", airplanes_path, class: "button-airplanes mt-4 mb-2 w-25" %>
        <% if @airplane.user != current_user %>
          <%= link_to "View airplane owner's profile", user_path(@airplane.user), class: "button-airplanes mt-4 mb-2 w-25"%>
        <% end %>
      </div>
    </div>
  </div>
  <hr class="">
    <div class="container mt-0">
      <div class="row">
        <div class="col-12">
          <% @total = 0 %>

          <% if @airplane.reviews.size >= 1 %>
            <h3 style="color:#173288">Reviews&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<% @airplane.review_average.round().times do %>
                  <i class="fas fa-star star-yellow"></i>
            <% end %>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h3>
          <% end %>

          <% if @airplane.reviews.empty? %>
            <p><em class="text-muted">No reviews yet for this plane</em></p>
            <% if current_user && @existing_inquiry %>
              <% if current_user != @airplane.user && @existing_inquiry.status == true  %>
                <small><em class="text-muted">Be the first one to review this airplane</em></small>
              <% end %>
            <% end %>
          <% end %>
          <% @airplane.reviews.each do |review| %>
            <div>
              <% review.score.times do %>
                <i class="fas fa-star", style="color:#173288"></i>
              <% end %>
              <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
              <p class="mb-0"><%= review.content %>  <small><em class="text-muted"> by <%= review.user.name %></em></small></p>
            </div>
            <hr>
          <% end %>
        </div>
        <div>
        <% if current_user && @existing_inquiry %>
          <% @existing_review = Review.where(user: current_user).joins(:airplane).where(airplane: @airplane) %>
          <% if current_user != @airplane.user && @existing_inquiry.status == true && @existing_review.size == 0  %>
            <div class="col-12">
              <div class="bg-white rounded p-3">
                <h5>Add your review</h5>
                <%= simple_form_for [@airplane, @review] do |f| %>
                  <%= f.input :content, placeholder: "Add your review here..." %>
                  <%= f.input :score, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { data: { controller: "star-rating" } } %>
                  <%= f.submit class:"btn btn-airplanes" %>
                <% end %>
              </div>
            </div>
          <%end%>
        <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
