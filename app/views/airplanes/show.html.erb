<div class="container w-100">
  <div class="d-flex justify-content-around  border-dark">
    <span class="align-self-center">
        <div class="text-left" id= "this">
          <% if current_user == @airplane.user %>
             <%= link_to "Edit this airplane", edit_airplane_path(@airplane), class: "btn btn-primary mb-4" %>
          <% end %>
            <h3><%= @airplane.tailnumber %></h3>
             <h4><%= "#{@airplane.engines} #{@airplane.make} based at #{@airplane.home_airport}"%></h4>
             <h5> <u>Qualifications to Rent</u></h5>
             <ul>
             <li><p><b>Total Hours:</b> <%= @airplane.minimum_hours %> </p></li>
             <li><p><b>PIC Hours in Same Type:</b> <%=(@airplane.minimum_hours)/3%></p></li>
             <li><p><b>Minimum License:</b> <%= @airplane.required_licenses %></p></li>
             </ul>
             <h6>Wet Rate per Hour: $<%= @airplane.price_per_hour %></h6>
             <p class="text-muted mt-3"><%= @airplane.description%></p>
             <%= button_to "Destroy this plane", @airplane, method: :delete, class: "btn btn-primary mt-4" if current_user == @airplane.user %>
        </div>
    </span>
    <div id="carouselExampleIndicators" style="height: 500px" class="carousel slide w-75" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @airplane.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>" style="height: 500px;">
              <%= cl_image_tag photo.key, class: "d-block w-100", crop: :fill, height: 500, width: 500 %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
      </div>
    </div>



  <% if current_user %>
    <% if current_user.inquiries.where(airplane: @airplane).count == 0 && @airplane.user != current_user %>
      <%= simple_form_for [@airplane, @inquiry] do |f| %>
      <%= f.hidden_field :user, :value => current_user %>
      <%= f.button :submit %>
    <% end %>
  <% end %>

  <% if @airplane.user != current_user %>
  <%= link_to "View airplane owner's profile", user_path(@airplane.user), class: "btn btn-primary"%>
  <% end %>

  <% @existing_inquiry = Inquiry.where(user: current_user).joins(:airplane).where(airplane: @airplane).last %>
  <%= link_to "Go to inquiry about plane", inquiry_path(@existing_inquiry), class: "btn btn-primary" if current_user.inquiries.where(airplane: @airplane).count >= 1 %>
  <% end %>

  <%= link_to "Back to all available planes", airplanes_path, class: "btn btn-primary mt-4 mb-4" %>

<hr class="my-5">
  <div class="row">
    <div class="col-12 col-sm-6">
      <h3>Reviews</h3>
      <% if @airplane.reviews.empty? %>
        <small><em class="text-muted">No reviews yet for this plane</em></small>
        <% if current_user && @existing_inquiry %>
          <% if current_user != @airplane.user && @existing_inquiry.status == true  %>
            <small><em class="text-muted">Be the first one to review this airplane</em></small>
          <% end %>
        <% end %>
      <% end %>
      <% @airplane.reviews.each do |review| %>
        <div>
          <% review.score.times do %>
            <i class="fas fa-star star-yellow"></i>
          <% end %>
          <small><em class="text-muted"><%= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%= review.content %></p>
        </div>
        <hr>
      <% end %>
    </div>
    <% if current_user && @existing_inquiry %>
      <% if current_user != @airplane.user && @existing_inquiry.status == true  %>
        <div class="col-12 col-sm-6">
          <div class="bg-white rounded p-3">
            <h5>Add your review</h5>
            <%= simple_form_for [@airplane, @review] do |f| %>
              <%= f.input :content, placeholder: "Add your review here..." %>
              <%= f.input :score, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { data: { controller: "star-rating" } } %>
              <%= f.submit class:"btn btn-flat" %>
            <% end %>
          </div>
        </div>
      <%end%>
    <%end%>
  </div>
</div>
</div>
