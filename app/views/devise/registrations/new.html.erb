<div class="container-fluid py-5 bg-image-sign">
  <div class="row align-items-center justify-content-center">
    <div class="container-2 div-shadow" style="max-width:720px;">
      <div class="col text-center mx-auto">
        <h1 class="mt-5 mb-4 text-white">Create an account</h1>
      </div>

      <div class="div2 px-5 py-4"  >
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="row">
          <div class="col-12 text-white">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
          </div>
          </div>

          <div class="row">
          <div class="col-md-6 text-white">
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
              </div>

            <div class="col-md-6 text-white">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>
          </div>

        <div class="row">

          <div class="col-md-6 text-white">
            <%= f.input :name, :label => "First Name", input_html: { placeholder: "As shown on FAA license" } %>
          </div>
          <div class="col-md-6 text-white">
            <%= f.input :last_name, :label => "Last Name", input_html: { placeholder: "As shown on FAA license" } %>
          </div>
        </div>

        <div class="row">

          <div class="col-md-6 text-white">
            <%= f.input :license, collection: ["Private Pilot", "Commercial Pilot"]%>
          </div>
          <div class="col-md-6 text-white">
            <%= f.input :fly_hours, as: :numeric %>
          </div>
        </div>

        <div class="row">

          <div class="col-md-6 text-white">
            <%= f.input :role, collection: ["Owner", "Pilot"]%>
          </div>
          <div class="col-md-6">
            <div class="mb-3 text-white">
              <%= f.input :photo, as: :file, required: true, :label => "Profile photo",
              required: true %>
            </div>
          </div>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up", class: "btn-login w-25 mt-3 mb-3 "  %>
          <div class="d-grid text-center">
        <%= render "devise/shared/links" %>
          </div>

        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
