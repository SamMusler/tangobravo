<div class="container-fluid py-5 bg-image-sign">
  <div class="row align-items-center justify-content-center">
    <div class="container-2 div-shadow" style="max-width:1000px;">
      <div class="col text-center text-white  mx-auto">
        <h1 class="mt-5 mb-4 text-white">Profile</h1>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

               <div class="row">

              <div class="col-sm-4">
              <%= f.input :email, required: true, autofocus: true %>
            </div>

            <div class="col-sm-4">
              <%= f.input :name, :label => "First Name", input_html: { placeholder: "As shown on FAA license" } %>
            </div>

            <div class="col-sm-4">
              <%= f.input :last_name, :label => "Last Name", input_html: { placeholder: "As shown on FAA license" } %>
            </div>

            </div>

          <div class="row">

            <div class="col-sm-4 mt-5">
              <%= f.input :password,
                          hint: "Leave it blank if you don't want to change it",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
            </div>

            <div class="col-sm-4  mt-5">
              <%= f.input :password_confirmation,
                          hint: "This should match your new password",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>

            </div>

            <div class="col-sm-4  mt-5">
              <%= f.input :current_password,
                          hint: "We need your current password to confirm your changes",
                          required: true,
                          input_html: { autocomplete: "current-password" } %>
            </div>

        </div>


          <div class="row">
          <div class="col-sm-4">
              <%= f.input :license, collection: ["Private Pilot", "Commercial Pilot"]%>
            </div>
            <div class="col-sm-4">
                          <%= f.input :fly_hours, as: :numeric %>
                        </div>

                        <div class="col-sm-4">
              <%= f.input :role, collection: ["Owner", "Pilot"]%>
            </div>
          </div>


              <div class="row justify-content-center">
            <div class="col-sm-4 mt-5" >
              <%= f.simple_fields_for :photos_fields do |posts| %>
              <%= f.input :photo, as: :file, required: true, :label => "Profile photo" %>
                </div>
                </div>

              <% end %>


              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="row justify-content-center">
            <div class="col-sm-4 mt-5">
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>

            </div>
            </div>
            <% end %>

          <div class="form-actions">
            <%= f.button :submit, "Update", class:"button-update w-25 my-5" %>
              <% end %>
          </div>
            </div>


    </div>
    </div>
    </div>
</div>
