
<div class="container">

  <div class="row d-flex">

    <div class="col-2 chatbox-cards"style="height: 100vh; overflow-y: scroll;" data-controller="mark-messages-as-read">
      <% if @inquiries %>
        <% @inquiries.each do |inquiry| %>
          <%= link_to inquiry_path(inquiry), class: "text-decoration-none inquiry-box" do %>
            <div class="border-bottom mb-2 <%= inquiry.messages.last.user == current_user ? '' : 'border-danger' %> <%= inquiry == @inquiry ? 'border-success' : '' %> " data-mark-messages-as-read-target="unread-chats" data-action="click->mark-messages-as-read#markAsRead">
              <p>#<%= inquiry.airplane.make %> w/
              <% if inquiry.user == current_user %>
                 <%= inquiry.airplane.user.name  %>
              <% else %>
                 <%= inquiry.user.name  %>
              <% end %> </p>
              <% if inquiry.messages.last.user != current_user %>
                <p class="small danger">Awaiting your response</p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <script>
        // Scroll to the bottom of the chatbox-cards div
        const chatboxCards = document.querySelector('.chatbox-cards');
        chatboxCards.scrollTop = chatboxCards.scrollHeight;
      </script>
    </div>

    <div class="row col-10 chat-box-container h-100">

      <div class="col-6 ">
        <div class="container inquiry"
          data-controller="inquiry-subscription"
          data-inquiry-subscription-inquiry-id-value="<%= @inquiry.id %>"
        >
          <h2>#<%= @inquiry.airplane.make %>
          <% if @inquiry.airplane.user == current_user %>
            <%= link_to "#{@inquiry.user.name}'s profile ", user_path(@inquiry.user), class: "btn"%>
          <% else %>
            <%= link_to "#{@inquiry.airplane.user.name}'s porfile ", user_path(@inquiry.airplane.user), class: "btn"%>
          <% end %></h2>

          <div class="messages-box" id="messages-box" data-inquiry-subscription-target="messages" style="height: 100vh; overflow-y: scroll;">
            <% @inquiry.messages.each do |message| %>
              <div class="message <%= message.user == current_user ? 'mine' : 'yours' %>">
              </div>
              <%= render "messages/message", message: message %>
            <% end %>

          </div>


          <%= simple_form_for [@inquiry, @message],
            html: { data: { action: "turbo:submit-end->inquiry-subscription#resetForm" }, class: "d-flex" }, id: "message-form" do |f|
          %>
            <%= f.input :content,
              label: false,
              placeholder: "Type here",
              wrapper_html: {class: "flex-grow-1"}
            %>
            <%= f.submit "Send", class: "btn btn-primary mb-3" %>

          <% end %>

        </div>
      </div>
      <div class="airplane-card col-md-6 mt-4 flex-grow-1">
      <% @airplane = @inquiry.airplane  %>
            <div >
              <% if @airplane.photos.attached? %>
                <img src="<%= cl_image_path @airplane.photos[0].key, height: 350, width: 400, crop: :fill %>" alt="Product Image">
              <% else %>
                <img src="https://images.unsplash.com/photo-1604285861770-54cb117a3f5a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1169&q=80" alt="Product Image">
              <% end %>
              <h2 class="mt-1"><%= "#{@airplane.make} #{@airplane.tailnumber}" %></h2>
              <p class="mt-1"><%= truncate("#{@airplane.description}", length: 50) %></p>
              <ul class="d-flex justify-content-center mt-2">
                <li><i class="fa-solid fa-location-dot" style="margin-right:6px"></i><%= @airplane.home_airport %></li>
                <li><i class="fa-solid fa-dollar-sign" ></i> <%= @airplane.price_per_hour %> /hour</li>
              </ul>
              <% if @inquiry.airplane.user == current_user && @inquiry.status == false %>
                <p> Has <%= @inquiry.user.name %> flown with you? </p>
                <%= simple_form_for [@inquiry] do |f| %>
                    <%= f.input :status, collection: [false, true] %>
                    <%= f.button :submit, class:"btn btn-dark w-10"%>
                <% end %>
              <% end %>
              <%= link_to "More Details", airplane_path(@airplane), class: "mt-1 button-airplanes" %>
            </div>
      </div>

    </div>
  </div>
  <script>
  var messagesBox = document.getElementById("messages-box");
  messagesBox.scrollTop = messagesBox.scrollHeight;
</script>

<script>
</script>
</div>
